@using CustomerPortal.Core.Resources
<body>
<link rel="stylesheet" href="~/content/css/login.css">
<div class="modal fade" id="modal-login" tabindex="-1" role="dialog" aria-labelledby="modal-login-label" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">&times;</span><span class="sr-only">@Resources.LabelClose</span>
                </button>
                <h3 class="modal-title" id="modal-login-label">@Resources.LabelLogin</h3>
            </div>
            <div class="modal-body">
                @* Login Form *@
                <form role="form" class="login-form" id="frmLogin">
                    <div class="form-group">
                        <label class="sr-only" for="userName">@Resources.LabelEmail</label>
                        <input type="email" id="userName" name="userName" placeholder="" class="form-username form-control required" data-bind="'value': userName">
                        <span id="invalid-userName" class="text-error"></span>
                    </div>
                    <div class="form-group">
                        <label class="sr-only" for="password">@Resources.LabelPassword</label>
                        <input type="password" id="password" name="password" placeholder="" class="form-password form-control required"  data-bind="'value': password">
                        <span id="invalid-Password" class="text-error"></span>
                    </div>
                    <button type="button" id="btnLogin" class="login-btn">@Resources.LabelSend</button>
                </form>
            </div>
        </div>
    </div>
</div>
<script src="~/scripts/authentication/bundle.js"></script>
